{
    "name": "@elizaos/plugin-xmtp",
    "version": "1.0.0-beta.32",
    "main": "dist/index.js",
    "type": "module",
    "types": "dist/index.d.ts",
    "dependencies": {
        "@elizaos/core": "1.0.0-beta.32",
        "@xmtp/node-sdk": "2.0.3",
        "tsx": "^4.19.2",
        "uint8arrays": "^5.1.0",
        "viem": "^2.22.17"
    },
    "devDependencies": {
        "tsup": "8.3.5",
        "typescript": "^5.7.3"
    },
    "scripts": {
        "build": "tsup --format esm --dts",
        "dev": "tsup --format esm --dts --watch",
        "lint": "eslint --fix  --cache ."
    },
    "publishConfig": {
        "access": "public"
    },
    "agentConfig": {
        "pluginType": "elizaos:client:1.0.0",
        "pluginParameters": {
            "WALLET_KEY": {
                "type": "string",
                "minLength": 1,
                "description": "the private key of the wallet",
                "optional": false
            },
            "XMTP_SIGNER_TYPE": {
                "type": "string",
                "enum": [
                    "SCW",
                    "EOA"
                ],
                "description": "the type of the xmtp signer to use",
                "optional": false
            },
            "XMTP_SCW_CHAIN_ID": {
                "type": "string",
                "description": "the chain id of the scw wallet",
                "optional": true
            },
            "XMTP_ENV": {
                "type": "string",
                "enum": [
                    "dev",
                    "local",
                    "production"
                ],
                "description": "the xmtp environment to use",
                "optional": true
            }
        }
    }
}